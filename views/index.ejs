<body>

  <div id="topbar-wrapper" class="fixed contain-to-grid">
    <nav class="top-bar" data-topbar >
      <ul class="title-area">
        <li class="name"><h1><a href="/">PhonyWeb</a></h1></li>
      </ul>

      <section class="top-bar-section">
        <ul class="left">
          <li class="divider"></li>
          <li><a id="contacts-btn" href="#">Contacts</a></li>
          <li class="divider"></li>
          <li class="has-dropdown"><a id='messages-btn' href="#">Messages</a>
            <ul class="dropdown" data-dropdown-content>
              <li><a id='messages-inbox-btn' href="#">Inbox</a></li>
              <li><a id='messages-sent-btn' href="#">Sent Items</a></li>
            </ul>
          </li>
          <li class="divider"></li>
          <li><a id='billing-btn' href="#" >Billing</a></li>
          <li class="divider"></li> 
          <li class="has-form"><a id='record-message-btn' href="#" class="button" data-reveal-id="recordModal">Compose </a></li>           
        </ul>

        <ul class="right">
          <li class="has-dropdown"><a id='user-btn' href="#">Username</a>
            <ul class="dropdown" data-dropdown-content>
              <li><a id='profile-btn' href="#">Profile</a></li>
              <li><a id='logout-btn' href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </section>
    </nav>
  </div>

  <div id="page" class="row">
    <div class="large-12 columns">

      <div id="header-wrapper">

      </div>

      <div id="div-wrapper">

      </div>

      <div id="ul-wrapper">

      </div>

      <div id="recordModal" class="reveal-modal small" data-reveal>
        <h4>Compose voice message</h4>

        <form id="compose-form" data-abide>
          <div class="row">
            <div class="columns small-12">
              <textarea id="message-txtBx" placeholder="Enter voice message as text"></textarea>
            </div>
          </div>

          <div class="row">
            <div class="columns small-12">
              <a href="#" class="button columns secondary dropdown">Contact List</a>
            </div>
          </div>

          <div class="row">
            <div class="columns small-12">
              <label><small>*required</small></label>
              <input id="mobile-number-txtBx" type="text" placeholder="Mobile number" pattern="number" required>
              <small class="error">You must enter a nigerian mobile number. E.g 08058113689</small>
            </div>
          </div>

          <div class="row">
            <div class="small-6 columns">
              <input id="first-name-txtBx" type="text" placeholder="First name" pattern="alpha_numeric" required>
              <small class="error">You must enter a first name to save contact.</small>
            </div>

            <div class="small-6 columns">
              <input id="last-name-txtBx" type="text" placeholder="Last name" pattern="alpha_numeric" required>
              <small class="error">You must enter a last name to save contact.</small>
            </div>
          </div>

          <div class="row">
            <div class="columns small-12">
              <a id="send-message-btn" href="#" class="button small-12 columns">Send</a>
            </div>
          </div>
        </form>
      </div>
    </div> 
  </div>

